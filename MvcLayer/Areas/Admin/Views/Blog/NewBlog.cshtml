@model BlogDtoForInsertion
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yeni Blog</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Anasayfa</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Blog">Bloglar</a></li>
                    <li class="breadcrumb-item active">Yeni Blog Oluştur</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


      


<div class="card shadow-lg border-0">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">Yeni Blog Oluştur</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-action="NewBlog" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BlogTitle" class="font-weight-bold">Blog Başlığı</label>
                        <input asp-for="BlogTitle" type="text" class="form-control" placeholder="Blog başlığını girin..." required>
                    </div>
                </div>
            </div>
            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-outline card-info">
                            <div class="card-header">
                                <h3 class="card-title">
                                    Bootstrap WYSIHTML5
                                    <small>Simple and fast</small>
                                </h3>
                                <!-- tools box -->
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool btn-sm" data-card-widget="collapse" data-toggle="tooltip"
                                            title="Collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool btn-sm" data-card-widget="remove" data-toggle="tooltip"
                                            title="Remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                                <!-- /. tools -->
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body pad">
                                <div class="mb-3">
                                    <textarea class="textarea" asp-for="BlogContent" placeholder="Place some text here"
                                              style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                                </div>
                                <p class="text-sm mb-0">
                                    Editor <a href="https://github.com/bootstrap-wysiwyg/bootstrap3-wysiwyg">
                                        Documentation and license
                                        information.
                                    </a>  
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-->
                </div>
                <!-- ./row -->
            </section>
            
            <div class="form-group">
                <label asp-for="BlogImageUrl" class="font-weight-bold">Görsel Yükle</label>
                <input name="file" type="file" class="form-control-file border p-2 rounded" accept=".jpg,.jpeg,.png,.gif" required>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CategoryId" class="font-weight-bold">Kategori</label>
                        <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control" required>
                            <option value="">Bir Kategori Seçin</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AuthorId" class="font-weight-bold">Yazar</label>
                        <select asp-for="AuthorId" asp-items="@ViewBag.Authors" class="form-control" required>
                            <option value="">Bir Yazar Seçin</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-3">
                <a asp-controller="Blog" asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Geri
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>


                  <script>
    $(function () {
      // Summernote
      $('.textarea').summernote()
    })
</script>