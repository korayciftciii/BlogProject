@model ICollection<Comment>

<div class="pt-5">
    <h3 class="mb-5">@Model.Count().ToString() Comments</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="/images/user.png" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.UserName</h3>
                    <div class="meta">&nbsp;-&nbsp; @(item.CommentDate.ToString("dd MMM yyyy") ?? "Tarih Yok")</div>
                    <p>@item.CommentContent</p>
                    <p><a href="#" class="reply rounded">Reply</a></p>
                </div>
            </li>
        }
        

