@model ICollection<Blog>
<div class="sidebar-box">
    <h3 class="heading">Popular Posts</h3>
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a asp-controller="Blogs" asp-action="GetBlogDetails" asp-route-blogId="@item.BlogId">
                        <img src="@item.BlogImageUrl" alt="@item.BlogTitle" class="mr-4">
                        <div class="text">
                            <h4>@item.BlogTitle</h4>
                            <div class="post-meta">
                                <span>&nbsp;-&nbsp; @(item.BlogDate.ToString("dd MMM yyyy") ?? "Tarih Yok")</span>
                            </div>
                        </div>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>