@model IEnumerable<Blog>
@await Component.InvokeAsync("FeauturedPosts")
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12">
                <h2>Recent Posts</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model) {<partial name="BlogCards" model="@item"/>}
        </div>
    </div>
</div>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
@await Component.InvokeAsync("OtherPosts")
<partial name="NewsLetter"/>

