@model IEnumerable<Category>

<div class="sidebar-box">
    <h3 class="heading">Categories</h3>
    <ul class="categories">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <li>
                    <a asp-controller="Category" asp-action="CategoryDetails" asp-route-categoryId="@item?.CategoryId">
                        @(item?.CategoryName ?? "Unknown")
                        <span>@(item?.Blogs != null && item.Blogs.Count() > 0 ? item.Blogs.Count().ToString() : "0")</span>
                    </a>
                </li>
            }
        }
        else
        {
            <li>No categories available</li>
        }
    </ul>
</div>
