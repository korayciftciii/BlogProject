@model Blog
<div class="col-lg-4 mb-4">
    <div class="entry2">
        <a href="single.html"><img src="@Model.BlogImageUrl" alt="Image" class="img-fluid rounded"></a>
        <div class="excerpt">
            <span class="post-category text-white bg-secondary mb-3">@Model.Category.CategoryName</span>

            <h2><a href="single.html">@Model.BlogTitle</a></h2>
            <div class="post-meta align-items-center text-left clearfix">
                <figure class="author-figure mb-0 mr-3 float-left"><img src="images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                <span class="d-inline-block mt-1">By <a href="#">@Model.Author.AuthorName</a></span>
                <span>&nbsp;-&nbsp; @Model.BlogDate.ToString("dd MMM yyyy")</span>
            </div>

            <p>@Model?.BlogContent?.Substring(0,Model.BlogContent.Substring(0,200).LastIndexOf(" "))...</p>
            <p><a asp-controller="Blogs" asp-action="GetBlogDetails" asp-route-blogId="@Model?.BlogId">Daha Fazla...</a></p>
        </div>
    </div>
</div> 

