@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="site-section bg-lightx">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-5">
                <div class="subscribe-1 ">
                    <h2>Bültenimize Abone Olun</h2>
                    <p class="mb-5">En son haberleri ve güncellemeleri almak için bültenimize abone olun.</p>
                    <form  method="post" class="d-flex">
                        <input type="email" name="MailAddress" class="form-control" placeholder="E-posta adresinizi girin" required>
                        <input type="submit" class="btn btn-primary" value="Abone Ol">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
